{
  "extends": "@infomaximum/config/tsconfig.lib.json",
  "compilerOptions": {
    "outDir": "dist",
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "allowJs": true,
    "noEmit": true,
    "declarationDir": "dts",
    "experimentalDecorators": false,
    "emitDecoratorMetadata": false
  },
  "exclude": ["/node_modules/", "**/node_modules", "**/.*/"],
  "include": ["src"]
}
